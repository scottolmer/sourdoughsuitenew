{
  "name": "Sourdough Suite",
  "displayName": "Sourdough Suite",
  "expo": {
    "name": "Sourdough Suite",
    "slug": "sourdough-suite",
    "version": "1.0.0",
    "orientation": "portrait",
    "entryPoint": "./index.js",
    "icon": "./assets/app-icon.png",
    "splash": {
      "image": "./assets/app-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.sourdoughsuite.app",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSUserNotificationsUsageDescription": "Sourdough Suite sends notifications to remind you when your starter needs feeding."
      }
    },
    "android": {
      "package": "com.sourdoughsuite.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ]
  }
}